.footer
  .footer__contact
    h3.footer__main-title Let's have a chat!
    .footer__video
      .footer__iframe
        iframe(
          src="https://www.youtube.com/embed/5dAJgeNelHI" 
          frameborder="0" 
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
          allowfullscreen
        )
    each anchor in data.footer.contact
      .footer__card
        .footer__card-body
          a.footer__link(
            title=`Click to visit: ${anchor.label}`
            href=anchor.url
          )
            span.footer__link-pulse
            span(
              class=`bb-${anchor.icon}`
            )
          h3.footer__title= anchor.title
          p.footer__description= anchor.description

        //- a.footer__button(
        //-   data-video-id=anchor.videoId
        //-   href="#"
        //- ) Watch Video
        if anchor.label
          a.footer__link-button(
            href=anchor.url
          )= anchor.label
    script.
      console.log("clic aici")
      const iframe = document.querySelector('iframe')
      document.querySelectorAll('.footer__button').forEach(fiecareElement => {
        fiecareElement.addEventListener('click', e => {
          iframe.setAttribute('src', `https://www.youtube.com/embed/${fiecareElement.dataset.videoId}?autoplay=1`)
          iframe.scrollIntoView({
            block: 'center',
            behavior: 'smooth'
          })
          e.preventDefault()
          return
        })
      })
